@using Spotify.Pages.Components 
@page "/debug"

<_Sidebar></_Sidebar>
<div class="container">
    <header class="header">
        <input type="text" class="search" placeholder="Поиск">
        <div class="profile-menu">
            <a href="#" class="profile-menu__text">
                @@figmamusic
            </a>
            <button class="profile-menu__img">
                <ul class="profile-menu__list">
                    <li class="profile-menu__item">
                        <a href="#profile">
                            Аккаунт
                        </a>
                    </li>
                    <li class="profile-menu__item">
                        <a href="#">
                            Выйти
                        </a>
                    </li>
                </ul>
            </button>
        </div>
    </header>
    <main class="main">
        <_TopicWithAlbums Title="Недавно добавленные"></_TopicWithAlbums>
        <_TopicWithAlbums Title="Лучшие треки" Subtitle="Подборки хитов по исполнителям"></_TopicWithAlbums>
    </main>
</div>
<div class="footer">
    <div class="player">
        <div class="player__left-side">
            <a href="#">
                <img src="/images/debug/footer-example.png" alt="" class='player__track-cover'>
            </a>
            <div class="player__track-creds">
                <a class="player__track-title" href="#">
                    Locked In
                </a>
                <a class="player__track-artist" href="#">
                    Spotify
                </a>
            </div>
        </div>
        <div class="player__center-side">
            <div class="player__center-side-up">
                <button class="player__control-button">
                    <img src="/images/icons/repeat.svg" alt="" class="">
                </button>
                <button class="player__control-button">
                    <img src="/images/icons/previous_track.svg" alt="">
                </button>
                <button class="player__control-button">
                    <img src="/images/icons/footer_play.svg" alt="">
                </button>
                <button class="player__control-button">
                    <img src="/images/icons/next_track.svg" alt="">
                </button>
                <button class="player__control-button">
                    <img src="/images/icons/shuffle.svg" alt="">
                </button>
            </div>
            <div class="player__center-side-bottom">
                <span class="player__time-passed">
                    0:02
                </span>
                <input class="player__track-progress" type="range" min="0" max="100" step="1" value="0">
                <span class="player__time-left">
                    3:20
                </span>
            </div>
        </div>
        <div class="player__right-side">
            <div class="player__volume">
                <img src="/images/icons/low_volume.svg">
                <input type="range" min="0" max="100" step="1" value="0" oninput="" onchange="">
            </div>
        </div>
    </div>
</div>
<div id="profile" class="profile">
    <div class="profile__window">
        <div class="profile__top">
            <div class="profile__img"></div>
            <div class="profile__name">
                <input type="text" value="yomayams">
                <button>Изменить</button>
            </div>
        </div>
        <div class="profile__bottom">
            <input type="text" value="yomayams@gmail.com">
            <button>Изменить</button>
        </div>
        <button class="profile__superbutton">Сменить пароль</button>
        <hr>
        <div class="playlists">
            <div class="playlist">
                <a href="#">
                    <img src="/images/debug/example-playlist.png">
                    <span class="playlist__text">
                        Плейлист 1
                    </span>
                </a>
            </div>

            <div class="playlist">
                <a href="#">
                    <img src="/images/debug/album-example.png">
                    <span class="playlist__text">
                        Плейлист 2
                    </span>
                </a>
            </div>

            <div class="playlist">
                <a href="#">
                    <img src="/images/icons/addplaylist.svg">
                    <span class="playlist__text">
                        Создать плейлист
                    </span>
                </a>
            </div>
        </div>
    </div>
</div>